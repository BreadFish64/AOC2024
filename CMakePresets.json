{
  "version": 9,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "environment": {
        "PATH": "$penv{PATH}${pathListSep}$env{CLANG_P2996_INSTALL_PREFIX}/bin"
      },
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": true,
        "CMAKE_CXX_STANDARD": "26",
        "CMAKE_CXX_STANDARD_REQUIRED": true,
        "CMAKE_C_COMPILER": "$env{CLANG_P2996_INSTALL_PREFIX}/bin/clang",
        "CMAKE_CXX_COMPILER": "$env{CLANG_P2996_INSTALL_PREFIX}/bin/clang++",
        "CMAKE_C_FLAGS": "-march=native -Wall -Wextra -Werror -Wno-missing-braces",
        "CMAKE_CXX_FLAGS": "-stdlib=libc++ -march=native -Wall -Wextra -Werror -Wno-missing-braces",
        "CMAKE_LINKER_TYPE": "LLD",
        "FETCHCONTENT_QUIET": false
      }
    },
    {
      "name": "clang-tidy-mixin",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_CLANG_TIDY": "$env{CLANG_P2996_INSTALL_PREFIX}/bin/clang-tidy;-p=${sourceDir}/out/build/${presetName}/"
      }
    },
    {
      "name": "optimized",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    }
  ]
}